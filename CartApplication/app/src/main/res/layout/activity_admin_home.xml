<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcoffee"
    android:padding="16dp"
    android:scaleType="centerCrop">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:src="@drawable/coffee_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FILTRO COFFEE"
                    android:textColor="#603913"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chào mừng"
                    android:textAlignment="center"
                    android:textColor="#603913"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/qltk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|fill_vertical"
                    android:text="not found 404"
                    android:textAlignment="textEnd"
                    android:textColor="#603913"
                    android:textSize="16sp"
                    tools:ignore="ExtraText" />

                <!-- Empty view -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="84dp"
                android:layout_height="115dp"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- Product list -->

        <LinearLayout
            android:id="@+id/menuadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/qltkadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/accounticon" />

                <TextView
                    android:id="@+id/qltkbtnadmin"
                    android:layout_width="match_parent"

                    android:layout_height="51dp"
                    android:text="Quản lý tài khoản"
                    android:textColor="#510101"
                    android:textSize="34sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qlspadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/producticon" />

                <TextView
                    android:id="@+id/qlspbtnadmin"
                    android:layout_width="match_parent"

                    android:layout_height="51dp"
                    android:text="Quản lý sản phẩm"
                    android:textColor="#510101"
                    android:textSize="34sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qldhadmin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/orderticon" />

                <TextView
                    android:id="@+id/qldhbtnadmin"
                    android:layout_width="match_parent"

                    android:layout_height="51dp"
                    android:text="Quản lý đơn hàng"
                    android:textColor="#510101"
                    android:textSize="34sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/profile_buttonadmin"
        android:layout_width="84dp"

        android:layout_height="84dp"

        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profilebutton" />

</androidx.constraintlayout.widget.ConstraintLayout>