<!-- item_order.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5E020202"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/userodername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/order_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Date: "
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/address_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/city_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City: "
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/phone_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number: "
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: "
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/payment_method_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method: "
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/statusorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/allowbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8A65CD6A"
            android:text="Duyệt"
            android:textColor="#2C8F02"
            android:visibility="gone"
            tools:visibility="gone" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#97D86E6E"
            android:text="Hủy"
            android:textColor="#E80000"
            android:visibility="gone"
            tools:visibility="gone" />
    </LinearLayout>

</LinearLayout>